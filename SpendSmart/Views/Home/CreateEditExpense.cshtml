@{
    ViewData["Title"] = "Create / Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit a Book</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Value">Value $</label>
        <input class="form-control" asp-for="Value" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" type="text" placeholder="Add a description" />
    </div>

    <div class="form-group">
        <label asp-for="UploadedImage">Upload Image</label>
        <input class="form-control" asp-for="UploadedImage" type="file" />
    </div>

    <button class="btn btn-primary mt-4" type="submit">Save</button>
</form>
